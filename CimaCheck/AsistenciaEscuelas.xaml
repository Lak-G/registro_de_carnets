<UserControl x:Class="Registro_de_carnets.AsistenciaEscuelas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Registro_de_carnets"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="UABCGreen" Color="#00594D"/>
        <SolidColorBrush x:Key="UABCGold" Color="#D7A22A"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4C9C16"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F7F8F6"/>
        <SolidColorBrush x:Key="NeutralBeige" Color="#F5F5DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#182111"/>
        
        <!-- Estilo para botones del header -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource BackgroundLight}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HeaderButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
            <Setter Property="Background" Value="#334C9C16"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
        </Style>
        
        <!-- Estilo para enlaces del header -->
        <Style x:Key="HeaderLinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="15,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Estilo para botón de volver -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource UABCGreen}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <TextBlock x:Name="arrow" Text="←" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Volver" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="#80D7A22A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    Margin="{TemplateBinding Padding}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    IsHitTestVisible="False"/>
                                    <Path Grid.Column="1"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Fill="{StaticResource TextDark}"
                                          Width="16"
                                          Height="16"
                                          Stretch="Uniform"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="0" Grid.ColumnSpan="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Focusable="False"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="{StaticResource UABCGold}"
                                        BorderThickness="2"
                                        CornerRadius="15"
                                        Margin="0,4,0,0"
                                        >
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBorder"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#20D7A22A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#40D7A22A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        
         <!-- Estilo para botón de submit -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource UABCGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" 
                                                ShadowDepth="3" 
                                                BlurRadius="10" 
                                                Opacity="0.3" 
                                                Color="#00594D"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1.02" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1.02" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="15" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="shadow"
                                                       Storyboard.TargetProperty="BlurRadius"
                                                       To="10" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="0.98" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="0.98" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1.02" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1.02" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para CheckBox -->
        <Style x:Key="CheckBoxUABC" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <!-- Borde dorado -->
                            <Border x:Name="Border"
                                    Width="20"
                                    Height="20"
                                    BorderBrush="{StaticResource UABCGold}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Background="White">
                                
                                <!-- Check verde (inicialmente oculto) -->
                                <Path x:Name="CheckMark"
                                      Data="M 0,5 L 5,10 L 12,0"
                                      Stroke="{StaticResource UABCGreen}"
                                      StrokeThickness="2.5"
                                      Stretch="Uniform"
                                      Margin="3"
                                      Visibility="Collapsed"/>
                            </Border>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- Cuando está checked, mostrar el check verde -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFF9F4E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
    </UserControl.Resources>
    
    <!-- Contenido Principal -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <!-- Header -->
        <Border Grid.Row="0" Padding="40,15,40,15" BorderBrush="#334C9C16" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Viewbox Width="24" Height="24" Margin="0,0,15,0">
                        <Canvas Width="48" Height="48">
                            <Path Fill="{StaticResource UABCGreen}" Data="M44,4 L30.6666,4 L30.6666,17.3334 L17.3334,17.3334 L17.3334,30.6666 L4,30.6666 L4,44 L44,44 Z"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="UABC Event Registration" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource UABCGreen}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Navegación -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Home" 
                               Style="{StaticResource HeaderLinkStyle}"/>
                    
                    <TextBlock Text="Events" 
                               Style="{StaticResource HeaderLinkStyle}"/>
                    
                    <TextBlock Text="About" 
                               Style="{StaticResource HeaderLinkStyle}"/>
                    
                    <Button x:Name="btnSoporte" 
                            Content="Soporte"
                            Margin="20, 0, 0, 0"
                            Style="{StaticResource HeaderButtonSecondaryStyle}"
                            />
                </StackPanel>
            </Grid>
        </Border>
        
        
        <!-- Contenido de la pagina -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <!-- Botón Volver -->
            <Button x:Name="BackButton" 
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="0,30,0,0"/>

            <!-- Título y Subtitulo-->
            <StackPanel>
                <TextBlock Text="Registro Por Escuelas" 
                           FontSize="56" 
                           FontWeight="Black" 
                           Foreground="{StaticResource UABCGreen}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,0"/>
                <TextBlock Text="Gestion de asistentes por escuelas"
                           FontSize="15"
                           Foreground="Gray"
                           TextWrapping="Wrap"></TextBlock>
            </StackPanel>
            
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,0,25">
                    <TextBlock Text="Nombre de la escuela *" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="#FF555555"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="SchoolNameComboBox"
                              Style="{StaticResource InputComboBoxStyle}">
                        <ComboBoxItem Content="Selecciona una escuela" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                        <ComboBoxItem Content="Facultad de Contaduría y Administración"/>
                        <ComboBoxItem Content="Facultad de Deportes"/>
                        <ComboBoxItem Content="Facultad de Idiomas"/>
                        <ComboBoxItem Content="+ Agregar nueva escuela" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource UABCGreen}"
                                      x:Name="AddNewSchoolItem"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Filtro por nombre" 
                               FontSize="13" 
                               FontWeight="Bold"
                               Foreground="#FF555555"
                               Margin="20,0,0,8"/>
                    <Border Background="#80F5F5DC"
                            BorderBrush="{StaticResource UABCGold}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Height="50"
                            VerticalAlignment="Top"
                            Margin="20,0,0,0">
                        <TextBox x:Name="NombreCompletoTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="15,12"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 TextChanged="NombreCompletoTextBox_OnTextChanged"/>
                    </Border>
                </StackPanel>
                
            </Grid>
            <!-- Area de lista de datos -->
            <ScrollViewer Height="425" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="ContenedorTarjetas" 
                            Margin="10">
                    <!-- Las tarjetas se agregaran aqui dinamicamente -->
                </StackPanel>
            </ScrollViewer>
            <StackPanel>
                <Button x:Name="SubmitButton"
                        Content="Registrar seleccionados"
                        Style="{StaticResource SubmitButtonStyle}"
                        Margin="0,15,0,0"
                />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
