<UserControl x:Class="Registro_de_carnets.CimaRegistro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Registro_de_carnets"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200">
    
<UserControl.Resources>
        <!-- Colores UABC -->
        <SolidColorBrush x:Key="UABCGreen" Color="#00594D"/>
        <SolidColorBrush x:Key="UABCGold" Color="#D7A22A"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4C9C16"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F7F8F6"/>
        <SolidColorBrush x:Key="NeutralBeige" Color="#F5F5DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#182111"/>
        <SolidColorBrush x:Key="GenderMaleColor" Color="#2882c6"/>
        <SolidColorBrush x:Key="GenderFemaleColor" Color="#c30072"/>
        <SolidColorBrush x:Key="GenderOtherColor" Color="#c6c6c6"/>

        <!-- Estilo para TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource UABCGold}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                TextElement.Foreground="{TemplateBinding Foreground}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de submit -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource UABCGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" 
                                                ShadowDepth="3" 
                                                BlurRadius="10" 
                                                Opacity="0.3" 
                                                Color="#00594D"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
    <EventTrigger RoutedEvent="MouseEnter">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.02" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.02" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="15" Duration="0:0:0.2"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="MouseLeave">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="10" Duration="0:0:0.2"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseDown">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="0.98" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="0.98" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseUp">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.02" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.02" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
</ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de volver -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <TextBlock Text="←" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Volver" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource UABCGreen}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Geometría para flecha -->
        <PathGeometry x:Key="ArrowBackIcon" Figures="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
        
        <!-- Estilo para ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="#80D7A22A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    Margin="{TemplateBinding Padding}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    IsHitTestVisible="False"/>
                                    <Path Grid.Column="1"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Fill="{StaticResource TextDark}"
                                          Width="16"
                                          Height="16"
                                          Stretch="Uniform"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="0" Grid.ColumnSpan="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Focusable="False"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="{StaticResource UABCGold}"
                                        BorderThickness="2"
                                        CornerRadius="15"
                                        Margin="0,4,0,0"
                                        >
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBorder"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#20D7A22A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#40D7A22A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center"  Width="540" Margin="0,100,0,80">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Botón Volver -->
                    <Button x:Name="BackButton" 
                            Grid.Column="0"
                            Style="{StaticResource BackButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,0"/>
                </Grid>
                
                

                <!-- Título -->
                <TextBlock Text="Cima Registro" 
                           FontSize="56" 
                           FontWeight="Black" 
                           Foreground="{StaticResource UABCGreen}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,0"/>

                <!-- Formulario -->
                <StackPanel>
                    <!-- Campo Matricula completo -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock x:Name="MatriculaLabel" Text="Matricula *" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <Border Background="#80F5F5DC"
                                BorderBrush="{StaticResource UABCGold}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="50"
                                VerticalAlignment="Top">
                            <TextBox x:Name="MatriculaTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     MaxLength="7"
                                     PreviewTextInput="MatriculaTextBox_PreviewTextInput"/>
                        </Border>
                        <TextBlock x:Name="MatriculaPlaceholder"
                                   Text="Ej. 1234567"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   IsHitTestVisible="False"
                                   Margin="17,5,0,0"
                                   VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=FullNameTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    
                    
                    <!-- Campo Nombre completo -->

                    <Grid Margin="0, 5, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,10,20">
                            <TextBlock x:Name="FullNameLabel" Text="Nombre completo *" 
                                       FontSize="13" 
                                       FontWeight="Medium"
                                       Foreground="#FF555555"
                                       Margin="0,0,0,8"/>
                            <Border Background="#80F5F5DC"
                                    BorderBrush="{StaticResource UABCGold}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Height="50"
                                    VerticalAlignment="Top">
                                <TextBox x:Name="FullNameTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="15,12"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="FullNamePlaceholder"
                                       Text="Ej.  Ana Maria Jimenes Huerta"
                                       FontSize="14"
                                       Foreground="#FF999999"
                                       IsHitTestVisible="False"
                                       Margin="17,5,0,0"
                                       VerticalAlignment="Top">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=FullNameTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Area de genero -->
                        <StackPanel Grid.Column="1"  Margin="0,0,0,5">
                            <TextBlock x:Name="GenderLabel" Text="Seleccione el genero*" 
                                       FontSize="13" 
                                       FontWeight="Medium"
                                       Foreground="#FF555555"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="GenderComboBox"
                                      Style="{StaticResource InputComboBoxStyle}">
                                <ComboBoxItem Content="Selecciona un Genero" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                                <ComboBoxItem Content="Masculino" Foreground="{StaticResource GenderMaleColor}"/>
                                <ComboBoxItem Content="Femenino" Foreground="{StaticResource GenderFemaleColor}" />
                                <ComboBoxItem Content="Otro" Foreground="{StaticResource GenderOtherColor}"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    
                    
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Area de facultad -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,25">
                            <TextBlock x:Name="FacultyLabel" Text="Facultad*" 
                                       FontSize="13" 
                                       FontWeight="Medium"
                                       Foreground="#FF555555"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="FacultyComboBox"
                                      SelectionChanged="FacultyComboBox_OnSelectionChanged"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                      Style="{StaticResource InputComboBoxStyle}">
                                <ComboBoxItem Content="Seleccione Facultad" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Area de programa educativo -->
                        <StackPanel Grid.Column="1" Margin="0,0,0,25">
                            <TextBlock x:Name="ProEdLabel" Text="Carrera*" 
                                       FontSize="13" 
                                       FontWeight="Bold"
                                       Foreground="#FF555555"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="ProEdComboBox"
                                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                      Style="{StaticResource InputComboBoxStyle}">
                                <ComboBoxItem Content="Seleccione una Carrera" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    
                    
                    
                    
                    
                    <TextBlock Text="Los Campos Marcados con un * son obligatorios"
                               FontWeight="Medium"
                               FontStyle="Oblique"
                               FontSize="10"
                               Foreground="#FF555555"/>
                    <!-- Botón Registrar -->
                    <Button x:Name="SubmitButton"
                            Content="Registrar"
                            Style="{StaticResource SubmitButtonStyle}"
                            Margin="0,15,0,0"
                            Click="SubmitButton_OnClick"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
