<UserControl x:Class="Registro_de_carnets.RegistroIndividual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Registro_de_carnets"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">


    <UserControl.Resources>
        <!-- Colores UABC -->
        <SolidColorBrush x:Key="UABCGreen" Color="#00594D"/>
        <SolidColorBrush x:Key="UABCGold" Color="#D7A22A"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4C9C16"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F7F8F6"/>
        <SolidColorBrush x:Key="NeutralBeige" Color="#F5F5DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#182111"/>

        <!-- Estilo para TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource UABCGold}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                TextElement.Foreground="{TemplateBinding Foreground}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de submit -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource UABCGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" 
                                                ShadowDepth="3" 
                                                BlurRadius="10" 
                                                Opacity="0.3" 
                                                Color="#00594D"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
    <EventTrigger RoutedEvent="MouseEnter">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.02" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.02" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="15" Duration="0:0:0.2"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="MouseLeave">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1" Duration="0:0:0.2"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="10" Duration="0:0:0.2"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseDown">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="0.98" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="0.98" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseUp">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.02" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.02" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
</ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de volver -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <TextBlock Text="←" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Volver" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource UABCGreen}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Geometría para flecha -->
        <PathGeometry x:Key="ArrowBackIcon" Figures="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center"  Width="540" Margin="0,80,0,80">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Botón Volver -->
                    <Button x:Name="BackButton" 
                            Grid.Column="0"
                            Style="{StaticResource BackButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,40"/>
                    
                    <!-- Barra de progreso -->
                    <StackPanel Margin="60,0,0,50" HorizontalAlignment="Center" Width="400" Grid.Column="1">
                        <TextBlock Text="Step 2 of 2" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource TextDark}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <Border Background="#334C9C16" CornerRadius="10" Height="8">
                            <Border Background="{StaticResource PrimaryGreen}" 
                                    CornerRadius="10" 
                                    Width="400" 
                                    HorizontalAlignment="Left"/>
                        </Border>
                    </StackPanel>
                </Grid>
                
                

                <!-- Título -->
                <TextBlock Text="Registro Individual" 
                           FontSize="56" 
                           FontWeight="Black" 
                           Foreground="{StaticResource UABCGreen}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,50"/>

                <!-- Formulario -->
                <StackPanel>
                    
                    <!-- Campo: Nombre completo -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Nombre completo *" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <Border Grid.Row="2"
                                Background="#80F5F5DC"
                                BorderBrush="{StaticResource UABCGold}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="50"
                                VerticalAlignment="Top">
                            <TextBox x:Name="NombreCompletoTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="FullNamePlaceholder"
                                   Text="Ej. Juan Pérez"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   IsHitTestVisible="False"
                                   Margin="17,15,0,0"
                                   VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=FullNameTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!-- Campo: Correo electrónico -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Correo electrónico *" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <Border Grid.Row="2"
                                Background="#80F5F5DC"
                                BorderBrush="{StaticResource UABCGold}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="50"
                                VerticalAlignment="Top">
                            <TextBox x:Name="CorreoElectronicoTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     />
                        </Border>

                        <TextBlock x:Name="EmailPlaceholder"
                                   Text="juan.perez@uabc.edu.mx"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   IsHitTestVisible="False"
                                   Margin="17,15,0,0"
                                   VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=EmailTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="EmailErrorMessage"
                                   Text="Por favor, introduce un correo electrónico válido."
                                   FontSize="12"
                                   Foreground="#FFE53E3E"
                                   Margin="0,8,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Botón Registrar -->
                    <Button x:Name="SubmitButton"
                            Content="Registrar"
                            Style="{StaticResource SubmitButtonStyle}"
                            Margin="0,15,0,0"
                            Click="SubmitButton_OnClick"
                            />
                    
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
