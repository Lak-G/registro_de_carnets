<UserControl x:Class="Registro_de_carnets.RegistroGrupal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Registro_de_carnets"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">


    <UserControl.Resources>
        <!-- Colores UABC -->
        <SolidColorBrush x:Key="UABCGreen" Color="#00594D"/>
        <SolidColorBrush x:Key="UABCGold" Color="#D7A22A"/>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#4C9C16"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F7F8F6"/>
        <SolidColorBrush x:Key="NeutralBeige" Color="#F5F5DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#182111"/>

        <DropShadowEffect x:Key="DropShadowEffect" 
                          ShadowDepth="3" 
                          BlurRadius="10" 
                          Opacity="0.2" 
                          Color="Black"/>
        
        <!-- Estilo para TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="#80D7A22A"/>
            <Setter Property="BorderThickness" Value="2"/>
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                TextElement.Foreground="{TemplateBinding Foreground}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#80F5F5DC"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="#80D7A22A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    Margin="{TemplateBinding Padding}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    IsHitTestVisible="False"/>
                                    <Path Grid.Column="1"
                                          Data="M7,10L12,15L17,10H7Z"
                                          Fill="{StaticResource TextDark}"
                                          Width="16"
                                          Height="16"
                                          Stretch="Uniform"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="0" Grid.ColumnSpan="2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Focusable="False"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="{StaticResource UABCGold}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Margin="0,4,0,0"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource UABCGold}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#D7A22A"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBorder"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#20D7A22A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBorder" Property="Background" Value="#40D7A22A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

       

        <!-- Estilo para botón de submit -->
        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource UABCGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" 
                                                ShadowDepth="3" 
                                                BlurRadius="10" 
                                                Opacity="0.3" 
                                                Color="#00594D"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
    <EventTrigger RoutedEvent="MouseEnter">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.05" Duration="0:0:0.3"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.05" Duration="0:0:0.3"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="15" Duration="0:0:0.3"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="MouseLeave">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1" Duration="0:0:0.3"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1" Duration="0:0:0.3"/>
                <DoubleAnimation Storyboard.TargetName="shadow"
                               Storyboard.TargetProperty="BlurRadius"
                               To="10" Duration="0:0:0.3"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseDown">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="0.98" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="0.98" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
    <EventTrigger RoutedEvent="PreviewMouseUp">
        <BeginStoryboard>
            <Storyboard>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleX"
                               To="1.05" Duration="0:0:0.1"/>
                <DoubleAnimation Storyboard.TargetName="scaleTransform"
                               Storyboard.TargetProperty="ScaleY"
                               To="1.05" Duration="0:0:0.1"/>
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
</ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón de volver -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource UABCGreen}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <TextBlock x:Name="arrow" Text="←" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Volver" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource UABCGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center" Width="600" Margin="0,80,0,80">
                
                <!-- Botón Volver -->
                <Button x:Name="BackButton" 
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0"/>

                <!-- Título -->
                <TextBlock Text="Registro Grupal" 
                           FontSize="56" 
                           FontWeight="Black" 
                           Foreground="{StaticResource UABCGreen}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,0"/>

                <!-- Formulario -->
                <StackPanel>
                    
                    <!-- Campo: Nombre del responsable -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Nombre completo del responsable del grupo *" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <Border Grid.Row="2"
                                Background="#80F5F5DC"
                                BorderBrush="{StaticResource UABCGold}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="50"
                                VerticalAlignment="Top">
                            <TextBox x:Name="GroupLeaderNameTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     />
                        </Border>

                        
                    </StackPanel>

                    <!-- Campo: Nombre de la escuela -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Nombre de la escuela *" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="SchoolNameComboBox"
                                  Style="{StaticResource InputComboBoxStyle}">
                            <ComboBoxItem Content="Selecciona una escuela" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                            <ComboBoxItem Content="Facultad de Contaduría y Administración"/>
                            <ComboBoxItem Content="Facultad de Deportes"/>
                            <ComboBoxItem Content="Facultad de Idiomas"/>
                            <ComboBoxItem Content="+ Agregar nueva escuela" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource UABCGreen}"
                                          x:Name="AddNewSchoolItem"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Campo: Nivel educativo -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Nivel educativo de la escuela *" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="EducationLevelComboBox"
                                  Style="{StaticResource InputComboBoxStyle}">
                            <ComboBoxItem Content="Selecciona un nivel" IsEnabled="False" IsSelected="True" Foreground="#FF999999"/>
                            <ComboBoxItem Content="Preparatoria" Tag="high-school"/>
                            <ComboBoxItem Content="Licenciatura" Tag="university"/>
                            <ComboBoxItem Content="Maestría" Tag="master"/>
                            <ComboBoxItem Content="Doctorado" Tag="phd"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Campo: Tamaño del grupo -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Tamaño del grupo *" 
                                   FontSize="13" 
                                   FontWeight="Bold"
                                   Foreground="#FF555555"
                                   Margin="0,0,0,8"/>
                        
                        
                        <Border Grid.Row="2"
                                Background="#80F5F5DC"
                                BorderBrush="{StaticResource UABCGold}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Height="50"
                                VerticalAlignment="Top">
                            <TextBox x:Name="GroupSizeTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     />
                        </Border>

                        <TextBlock x:Name="GroupSizePlaceholder"
                                   Text="Ej. 10"
                                   FontSize="14"
                                   Foreground="#FF999999"
                                   IsHitTestVisible="False"
                                   Margin="17,15,0,0"
                                   VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=GroupSizeTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock x:Name="GroupSizeErrorMessage"
                                   Text="Este campo es requerido."
                                   FontSize="12"
                                   Foreground="#FFE53E3E"
                                   Margin="0,4,0,0"
                                   Visibility="Collapsed"/>
                        
                        
                    </StackPanel>

                    <!-- Botón Registrar -->
                    <Button x:Name="SubmitButton"
                            Content="Registrar"
                            Style="{StaticResource SubmitButtonStyle}"
                            Margin="0,15,0,0"/>
                    
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
